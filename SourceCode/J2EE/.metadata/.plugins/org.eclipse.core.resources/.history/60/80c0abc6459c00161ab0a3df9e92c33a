import javafx.scene.control.Alert;
import javafx.scene.control.Alert.AlertType;

public class validatedata 
{
	public boolean ValidateData(String uid) 
	{
		
		try
		{
			int uid1=Integer.parseInt(uid);
			if(uid==null)
			{
				System.out.println(uid);
			}
		}
		catch(Exception ex)
		{
			errorMessageBox(" uid Data is not filled in required fields");
			return false;
		}
		try  
		{
			long uid1=Long.parseLong(uid);
			if(uid1==0)
			{
				errorMessageBox("UID can’t be zero ");
			}
			if(uid1<=0)
			{
				errorMessageBox("UID doesn’t accept negative numbers ");
			}
			if(uid1<=9999999999L)
			{
				return true;
			}
			else 
			{
				errorMessageBox("UID can’t be more than 9999999999");
				return false;
			}
		}
		catch(Exception ex)
		{
			errorMessageBox("UID accepts only numbers");
			return false;
		}
	}
	

		String firstname;
		String lastname;
		String age;
		String gender;
		String dob;
		String height;
		String weight;
		String birthday;
		String address;
		String aadhaarno;
	    String mobilenumber;
	    String mailid;
	    String studytype;	
		

	private void errorMessageBox(String message) 
	{
		Alert alert=new Alert(AlertType.ERROR);
		alert.setTitle("Clinical Informatics");
		alert.setContentText(message);
		alert.showAndWait();
	}

}

